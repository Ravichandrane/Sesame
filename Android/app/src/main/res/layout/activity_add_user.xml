<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@android:color/white"
                tools:context="fr.ravichandrane.sesame.AddUserActivity">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/usernameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addUser_activity_marginTop"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:textCursorDrawable="@drawable/addusercursor_color"
        android:textColor="@color/textLabelColor"
        app:met_primaryColor = "@color/mainColor"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/userFirstNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addUser_activity_marginTop"
        android:layout_below="@id/usernameField"
        android:hint="@string/userFirstName_hint"
        android:inputType="text"
        android:textCursorDrawable="@drawable/addusercursor_color"
        android:textColor="@color/textLabelColor"
        app:met_primaryColor = "@color/mainColor"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addUser_activity_marginTop"
        android:layout_below="@id/userFirstNameField"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/addusercursor_color"
        android:textColor="@color/textLabelColor"
        app:met_primaryColor = "@color/mainColor"
        app:met_floatingLabel="highlight" />



</RelativeLayout>
