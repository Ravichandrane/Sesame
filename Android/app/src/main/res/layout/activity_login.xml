<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/backgroundLogin"
                tools:context="fr.ravichandrane.sesame.LoginActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:text="@string/login_title"
        android:fontFamily="sans-serif-medium" />

    <EditText
        android:id="@+id/emailField"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginTop="88.5dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:layout_alignParentStart="true"
        android:hint="@string/email_hint"
        android:textSize="14sp"
        android:backgroundTint="@color/indicatorInputColor"
        android:textColor="@android:color/white"
        android:textCursorDrawable="@drawable/logincursor_color"
        android:textColorHint="@android:color/white"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/passwordField"
        android:layout_below="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignParentStart="true"
        android:hint="@string/password_hint"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@drawable/logincursor_color"
        android:fontFamily="sans-serif" />

    <Button
        android:id="@+id/button"
        android:layout_below="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:textColor="@color/mainColor"
        android:textAllCaps="false"
        android:textSize="12.5sp"
        android:text="@string/signin_label" />


</RelativeLayout>
