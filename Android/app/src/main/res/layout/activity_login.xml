<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/loginActivity_horizontal_margin"
                android:paddingRight="@dimen/loginActivity_horizontal_margin"
                android:background="#393F58"
                tools:context="fr.ravichandrane.sesame.Controller.LoginActivity">

    <TextView
        android:id="@+id/homeTitle"
        android:text="@string/home_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/loginActivity_title"
        android:textColor="@android:color/white"
        android:textSize="50sp"/>

    <EditText
        android:id="@+id/emailField"
        android:layout_below="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:hint="@string/email_hint_label"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:backgroundTint="#717897"
        android:layout_marginTop="48dp"/>

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="@string/password_hint_label"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:backgroundTint="#717897" />

    <Button
        android:id="@+id/button"
        android:layout_below="@+id/passwordField"
        android:layout_alignStart="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/login_button_text"
        android:textColor="@color/ColorButtonConnexion"
        android:textAllCaps="false"
        android:background="@android:color/white"
        android:layout_marginTop="48dp"/>

</RelativeLayout>
