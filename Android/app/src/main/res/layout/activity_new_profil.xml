<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="fr.ravichandrane.sesame.Controller.NewProfilActivity">

    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:id="@+id/timerContent"
        android:layout_below="@id/toolBar"
        android:layout_width="272.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33.5dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/rankField"
            android:hint="@string/rank_hint"
            android:inputType="text"
            android:textColorHint="@color/textHintColor"
            android:textColor="@color/textInputColor"
            android:textSize="16sp"
            android:backgroundTint="#BBBBBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33.5dp"
            android:text="@string/textTime"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:textColor="@color/defaultText" />

        <LinearLayout
            android:id="@+id/timeSlot"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/startTextTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÃ©but"
                android:background="@null"
                android:layout_gravity="start"
                android:textColor="@color/accentColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/endTextTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:text="Fin"
                android:layout_gravity="end"
                android:textColor="@color/accentColor"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timer"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/startimer"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="06:30"
                android:inputType="time"
                android:textSize="40sp"
                android:layout_gravity="start"
                android:textColor="@color/accentColor"
                app:met_hideUnderline="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/endTimer"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="21:30"
                android:inputType="time"
                android:textSize="40sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="end"
                android:textColor="@color/accentColor"
                app:met_hideUnderline="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="33.5dp"
            android:text="@string/textRadius"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:textColor="@color/defaultText" />


    </LinearLayout>

    <com.rey.material.widget.Slider
        android:id="@+id/radiusMeter"
        android:layout_below="@id/timerContent"
        style="@style/Material.Widget.Slider"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/Activity_horizontal_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:sl_minValue="0"
        app:sl_maxValue="100"
        app:sl_discreteMode="true"
        app:sl_primaryColor="#393F58"/>

</RelativeLayout>
