<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <include
            android:id="@+id/toolBar"
            layout="@layout/tool_bar" />

        <TextView
            android:id="@+id/doorState"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="82dp"
            android:text="@string/door_state_text"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"/>

        <ImageView
            android:id="@+id/buttonOpenDoor"
            android:layout_below="@id/doorState"
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:src="@drawable/button_open"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/lastOpenedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonOpenDoor"
            android:layout_marginTop="46dp"
            android:text="@string/last_opened_text"
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/infoOpenedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lastOpenedText"
            android:text="@string/info_text"
            android:textColor="#9A9A9A"/>

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="fr.ravichandrane.sesame.Fragment.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer"/>


</android.support.v4.widget.DrawerLayout>

