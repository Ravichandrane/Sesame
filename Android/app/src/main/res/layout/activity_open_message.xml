<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/mainColor"
                tools:context="fr.ravichandrane.sesame.OpenMessageActivity">

    <TextView
        android:id="@+id/textOpenGarage"
        android:text="@string/openGarageText"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:layout_width="220.5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOpenGarage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89.5dp"
        android:text="Votre garage est en cours d'ouverture"
        android:textColor="@color/textAlpha"
        android:textSize="16sp"/>

</RelativeLayout>
