<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ravichandrane.sesame" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".Network.Parse">
        <activity
            android:name=".Controller.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginAppTheme" >
        </activity>
        <activity
            android:name=".Controller.AddUserActivity"
            android:label="@string/title_activity_add_user" >
        </activity>
        <activity
            android:name=".Controller.NewProfilActivity"
            android:label="@string/title_activity_new_profil" >
        </activity>
        <activity
            android:name=".Controller.OpenMessageActivity"
            android:label="@string/title_activity_open_message"
            android:theme="@style/OpenGarage" >
        </activity>
        <activity
            android:name=".Controller.CloseMessageActivity"
            android:label="@string/title_activity_close_message"
            android:theme="@style/LoginAppTheme" >
        </activity>
    </application>

</manifest>
